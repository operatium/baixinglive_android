<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充颜色，这里设置为透明 -->
    <solid android:color="@android:color/transparent" />
    <!-- 描边属性，设置宽度和颜色 -->
    <stroke
        android:width="1px"
        android:color="@android:color/black" />
    <corners
        android:radius="@dimen/dp.50"
        />
    <!-- 设置内边距 -->
    <padding
        android:bottom="10dp"
        android:left="20dp"
        android:right="20dp"
        android:top="10dp" />
</shape>