<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp.20"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出青少年模式"
        android:textColor="#333333"
        android:textSize="@dimen/sp.18"
        android:textStyle="bold" 
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp.20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入监护密码验证身份，以退出青少年模式"
        android:textColor="#666666"
        android:textSize="@dimen/sp.14"
        android:layout_marginBottom="@dimen/dp.16"/>

    <EditText
        android:id="@+id/baixing_password_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.48"
        android:background="@android:drawable/edit_text"
        android:hint="请输入监护密码"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:paddingStart="@dimen/dp.12"
        android:paddingEnd="@dimen/dp.12"
        android:textSize="@dimen/sp.16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码请联系客服"
        android:textColor="#999999"
        android:textSize="@dimen/sp.12"
        android:layout_marginTop="@dimen/dp.8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp.24">

        <TextView
            android:id="@+id/baixing_cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp.44"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="@dimen/sp.16" />

        <TextView
            android:id="@+id/baixing_confirm_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp.44"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp.12"
            android:background="#FF5A60"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp.16" />
    </LinearLayout>
</LinearLayout> 