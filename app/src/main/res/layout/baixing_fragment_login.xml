<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="联系客服"
        android:padding="@dimen/dp.20"
        android:textSize="@dimen/sp.12"
        android:layout_gravity="end"
        />

    <ImageView
        android:layout_width="@dimen/dp.159"
        android:layout_height="@dimen/dp.51"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp.60"
        android:src="@drawable/baixing_99zhibo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.60"
        android:layout_marginTop="60dp"
        android:background="@drawable/baixing_button_background"
        android:layout_marginHorizontal="@dimen/dp.20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="@dimen/sp.16"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp.10"
            android:layout_marginEnd="@dimen/dp.20"
            android:text="+86" />

        <TextView
            android:layout_width="1px"
            android:layout_height="@dimen/dp.30"
            android:background="#000000"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/baixing_edit_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="@dimen/sp.16"
            android:paddingHorizontal="@dimen/dp.12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.60"
        android:layout_marginTop="@dimen/dp.16"
        android:layout_marginHorizontal="@dimen/dp.20"
        android:background="@drawable/baixing_button_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/baixing_edit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingHorizontal="@dimen/dp.12" />

        <TextView
            android:layout_width="1px"
            android:layout_height="@dimen/dp.30"
            android:background="#000000"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/baixing_btn_send_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp.20"
            android:layout_marginEnd="@dimen/dp.10"
            android:gravity="center"
            android:text="发验证码"
            android:textColor="#9370DB" />
    </LinearLayout>

    <TextView
        android:id="@+id/baixing_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp.50"
        android:layout_marginHorizontal="@dimen/dp.20"
        android:layout_marginTop="@dimen/dp.40"
        android:textSize="@dimen/sp.18"
        android:background="@drawable/baixing_button_background2"
        android:gravity="center"
        android:text="登录"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/dp.10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp.40"
            android:layout_height="@dimen/dp.40"
            android:layout_marginHorizontal="@dimen/dp.20"
            android:src="@drawable/baixing_ic_wechat" />

        <ImageView
            android:layout_width="@dimen/dp.40"
            android:layout_height="@dimen/dp.40"
            android:layout_marginHorizontal="@dimen/dp.20"
            android:src="@drawable/baixing_ic_qq" />

        <ImageView
            android:layout_width="@dimen/dp.40"
            android:layout_height="@dimen/dp.40"
            android:layout_marginHorizontal="@dimen/dp.20"
            android:src="@drawable/baixing_ic_99" />

        <ImageView
            android:layout_width="@dimen/dp.40"
            android:layout_height="@dimen/dp.40"
            android:layout_marginHorizontal="@dimen/dp.20"
            android:src="@drawable/baixing_ic_weibo" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/baixing_checkbox_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="@dimen/dp.15"
        android:text="我已阅读并同意《用户协议》和《隐私政策》" />

</LinearLayout>