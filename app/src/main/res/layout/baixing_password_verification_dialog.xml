<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp.20">

    <TextView
        android:id="@+id/baixing_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入监护密码"
        android:textColor="#333333"
        android:textSize="@dimen/sp.16"
        android:textStyle="bold" 
        android:layout_marginBottom="@dimen/dp.20"/>

    <TextView
        android:id="@+id/baixing_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入监护密码验证身份，以退出青少年模式"
        android:textColor="#666666"
        android:textSize="@dimen/sp.14"
        android:layout_marginBottom="@dimen/dp.16"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp.10"
        android:hint="请输入监护密码">

        <EditText
            android:id="@+id/baixing_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/sp.16" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码请联系客服"
        android:textColor="#999999"
        android:textSize="@dimen/sp.12"
        android:layout_marginTop="@dimen/dp.16"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp.20">

        <TextView
            android:id="@+id/baixing_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/baixing_button_background"
            android:gravity="center"
            android:paddingVertical="@dimen/dp.10"
            android:text="取消"
            android:textSize="@dimen/sp.16"
            android:layout_marginEnd="@dimen/dp.10"/>

        <TextView
            android:id="@+id/baixing_confirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/baixing_button_background2"
            android:gravity="center"
            android:paddingVertical="@dimen/dp.10"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp.16"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp.10"/>
    </LinearLayout>
</LinearLayout>