<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp.20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置监护密码"
        android:textColor="#333333"
        android:textSize="@dimen/sp.16"
        android:textStyle="bold" 
        android:layout_marginBottom="@dimen/dp.20"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请设置6位数字监护密码，用于解除青少年模式限制"
        android:textColor="#666666"
        android:textSize="@dimen/sp.14"
        android:layout_marginBottom="@dimen/dp.16"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp.10"
        android:hint="请输入密码">

        <EditText
            android:id="@+id/baixing_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/sp.16" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp.16"
        android:hint="请确认密码">

        <EditText
            android:id="@+id/baixing_confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/sp.16" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示：密码仅用于解除青少年模式限制，请妥善保管"
        android:textColor="#999999"
        android:textSize="@dimen/sp.12"
        android:layout_marginTop="@dimen/dp.16"/>
</LinearLayout> 