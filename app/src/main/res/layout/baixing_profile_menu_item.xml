<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/dp.8">

    <ImageView
        android:id="@+id/baixing_menu_icon"
        android:layout_width="@dimen/dp.40"
        android:layout_height="@dimen/dp.40"
        android:padding="@dimen/dp.8" />

    <TextView
        android:id="@+id/baixing_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp.4"
        android:textColor="#333333"
        android:textSize="@dimen/sp.12" />

</LinearLayout>